@model TEST.Models.Product


@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-white">@(Model.Id != 0 ? "Update" : "Create")</h1>

<hr />

<form asp-action="Upsert" class="text-white" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-floating mb-3">
            <input asp-for="Title" class="form-control" placeholder="Title" />
            <label asp-for="Title" class="control-label"></label>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
            <label asp-for="Description" class="control-label"></label>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="ISBN" class="form-control" placeholder="ISBN" />
            <label asp-for="ISBN" class="control-label"></label>
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Author" class="form-control" placeholder="Author" />
            <label asp-for="Author" class="control-label"></label>
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Price" class="form-control" placeholder="Price" />
            <label asp-for="Price" class="control-label"></label>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Price50" class="form-control" placeholder="Price50" />
            <label asp-for="Price50" class="control-label"></label>
            <span asp-validation-for="Price50" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Price100" class="form-control" placeholder="Price100" />
            <label asp-for="Price100" class="control-label"></label>
            <span asp-validation-for="Price100" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input type="file" name="file" class="form-control" />
            <label asp-for="ImageUrl" class="control-label"></label>
        </div>



        <div class="form-floating mb-3">
            <select asp-for="CategoryId" asp-items="ViewBag.CategoryId" class="form-control">
                <option value="">Select cover type</option>
            </select>

            <label asp-for="CategoryId" class="control-label"></label>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">

            <select asp-for="CoverTypeId" asp-items="ViewBag.CoverTypeId" class="form-control">
                <option value="">Select cover type</option>
            </select>

            <label asp-for="CoverTypeId" class="control-label"></label>
            <span asp-validation-for="CoverTypeId" class="text-danger"></span>
        </div>



        <div class="form-floating mb-3">
            <input type="submit" value="@(Model.Id != 0 ? "Update" : "Create")" class="btn btn-primary" />
            <a asp-controller="Product" asp-action="Index" class="btn btn-primary" style="width: 150px;">Back to list</a>
        </div>
    </div>
</form>

<partial name="_Notification" />


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
