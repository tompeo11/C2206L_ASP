@model IEnumerable<TEST.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string search = Context.Request.Query["search"];
}

<div class="container p-3 text-white">
    <div class="row">
        <div class="col-4">
            <h1>Product List</h1>
        </div>
        <div class="col-8 d-flex align-items-center justify-content-end">
            @if (!string.IsNullOrEmpty(search))
            {
                <a asp-action="Index" class="text-decoration-none me-2 text-white fw-bold">Reset</a>
            }
            <form asp-action="Index" method="GET">
                <input id="search" type="text" name="search" class="form-control me-3" style="width: 200px;" placeholder="Search..." />
            </form>
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus-circle"></i>   Create new Product</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped table-hover text-white">
    <thead>
        <tr>
            <th>
                Title
            </th>

            <th>
                Category
            </th>

            <th>
                CoverType
            </th>

            <th>
                Price
            </th>

            <th>
                Image
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Category.Name</td>
                <td>@item.CoverType.Name</td>
                <td>@item.Price</td>
                <td><img src="~/images/product/@item.ImageUrl" style="width: 80px;" /></td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-outline-primary" asp-action="Upsert" asp-route-id="@item.Id"><i class="bi bi-pencil"></i>  Edit</a>
                    </div>
                    <div class="btn-group" role="group">
                        <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-file-text-fill"></i>  Details</a>
                    </div>
                    <div class="btn-group" role="group">
                        <a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>  Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


<partial name="_Notification"/>