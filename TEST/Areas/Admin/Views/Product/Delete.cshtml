@model TEST.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="text-white">Delete</h1>
<h3 class="text-white">Are you sure you want to delete this?</h3>

<hr />

<div class="text-white border p-3 mt-4">
    <dl class="row">
        <dt class = "col-sm-2">
            Title
        </dt>
        <dd class = "col-sm-10">
            @Model.Title
        </dd>

        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Model.Description
        </dd>

        <dt class = "col-sm-2">
            Author
        </dt>
        <dd class = "col-sm-10">
            @Model.Author
        </dd>

        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.Price
        </dd>

        <dt class="col-sm-2">
            Price50
        </dt>
        <dd class="col-sm-10">
            @Model.Price50
        </dd>

        <dt class="col-sm-2">
            Price100
        </dt>
        <dd class="col-sm-10">
            @Model.Price100
        </dd>

        <dt class="col-sm-2">
            ImageUrl
        </dt>
        <dd class="col-sm-10">
            @Model.ImageUrl
        </dd>

        <dt class="col-sm-2">
            CategoryName
        </dt>
        <dd class="col-sm-10">
            @Model.Category.Name
        </dd>

        <dt class="col-sm-2">
            CoverTypeName
        </dt>
        <dd class="col-sm-10">
            @Model.CoverType.Name
        </dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-controller="Product" asp-action="Index" class="btn btn-primary" style="width: 150px;">Back to list</a>
    </form>
</div>