@model IEnumerable<TEST.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string search = Context.Request.Query["search"];
}

<div class="container p-3 text-white">
    <div class="row">
        <div class="col-4">
            <h1>Category List</h1>
        </div>
        <div class="col-8 d-flex align-items-center justify-content-end">
            @if (!string.IsNullOrEmpty(search))
            {
                <a asp-action="Index" class="text-decoration-none me-2 text-white fw-bold">Reset</a>
            }
            <form asp-action="Index" method="GET">
                <input id="search" type="text" name="search" class="form-control me-3" style="width: 200px;" placeholder="Search..." />
            </form>
            <a asp-controller="Categories" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>   Create new Category</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped table-hover text-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisplayOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td> @Html.DisplayFor(modelItem => item.DisplayOrder)</td>
                <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil"></i>  Edit</a>
                    </div>
                    <div class="btn-group" role="group">
                        <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-file-text-fill"></i>  Details</a>
                    </div>
                    <div class="btn-group" role="group">
                        <a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>  Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="_Notification" />