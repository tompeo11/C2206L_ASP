@{
}

@model List<BasketItem>;

<div class="container p-3 text-white">
    <div class="row">
        <div class="col-4">
            <h1>Product List</h1>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped table-hover text-white">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Author</th>
            <th>Price</th>
            <th>Image</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null && Model.Count > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <input asp-for="@item.Product.Id" type="hidden" />
                    <td>@item.Product.Title</td>
                    <td>@item.Product.Description</td>
                    <td>@item.Product.Author</td>
                    <td>@item.Product.Price</td>
                    <td><img src="~/images/product/@item.Product.ImageUrl" style="width: 80px;" /></td>
                    <td>
                        <input asp-for="@item.Count" class="form-control" type="number" />
                    </td>
                </tr>
            }
        }
    </tbody>
</table>