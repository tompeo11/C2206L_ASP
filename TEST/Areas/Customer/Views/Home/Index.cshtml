@model IEnumerable<Vaccine>

<div class="container pb-3">
    <div class="row p-2">
        @foreach (var vaccine in Model)
        {
            <div class="col-lg-3 col-md-6 col-sm-12 px-3 py-3">
                <div class="card p-1 border-primary rounded-h100 shadow-sm">
                    <div class="card-body">
                        <p class="card-title text-info mb-5">Vaccine name: @vaccine.Name</p>
                        <p class="mb-0">Vaccine Type: @vaccine.Type.Name</p>
                        <p class="mb-0">Country: @vaccine.Country</p>
                        <p class="fw-semibold mb-0 mt-auto text-success">$@vaccine.Price</p>
                    </div>
                    <div>
                        <a asp-action="Details" asp-route-id="@vaccine.Id" class="btn btn-primary form-control">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>