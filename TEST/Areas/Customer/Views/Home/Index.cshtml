@model IEnumerable<VaccineSchedule>

<div class="container pb-3">
    <div class="row p-2">
        @foreach (var schedule in Model)
        {
            <div class="col-lg-3 col-md-6 col-sm-12 px-3 py-3">
                <div class="card p-1 border-primary rounded-h100 shadow-sm">
                    <div class="card-body">
                        <p class="card-title text-info mb-5">Vaccine name: @schedule.Vaccine.Name</p>
                        <p class="mb-0">@schedule.Vaccine.Country</p>
                        <p class="fw-semibold mb-0 mt-auto text-success">$@schedule.Vaccine.Price</p>
                    </div>
                    <div>
                        <a asp-action="Details" asp-route-id="@schedule.Id" class="btn btn-outline-success form-control">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>