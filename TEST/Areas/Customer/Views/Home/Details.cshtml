@model TEST.Models.Vaccine

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>Vaccine Details</h4>
    <hr />
</div>
<div>
    <div class="row">
         <div class="col">
            <p>Vaccine Name: @Model.Name</p>
            <p>Vaccine Type Name: @Model.Type.Name</p>
            <p>Manufacturing Country: @Model.Country</p>
            <p>Expiration Date: @Model.ExpirationDate</p>
         </div>
    </div>
   
    <div>
        <a asp-area="Customer" asp-controller="Basket" asp-action="AddToCart" asp-route-id="@Model.Id" class="btn btn-primary">
            Add To Cart
        </a>
        <a asp-action="Index" class="btn btn-primary" style="width: 150px;">Back to Home</a>
    </div>
</div>

